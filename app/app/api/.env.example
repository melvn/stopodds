# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@127.0.0.1:5432/stopodds


# FastAPI
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://stopodds.com.au

# Rate limiting
ENABLE_RATE_LIMITING=True
RATE_LIMIT_PER_MINUTE=60

# Model training
MIN_SAMPLE_SIZE=500
MIN_STOPS=100
ENABLE_LIGHTGBM=True

# Security
SECRET_KEY=your-secret-key-here
HASH_SALT=your-hash-salt-here

# Admin
ADMIN_EMAILS=admin@example.com
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret